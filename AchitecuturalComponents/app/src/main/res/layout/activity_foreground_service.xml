<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".service.ForegroundServiceActivity">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="input"
            android:ems="10"
            android:id="@+id/editText" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="218dp" app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:text="StartService"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button9"
            android:onClick="startServiceClick"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="@+id/button10"
            app:layout_constraintVertical_chainStyle="packed" android:layout_marginStart="1dp"
            android:layout_marginBottom="30dp" app:layout_constraintBottom_toTopOf="@+id/button10"/>
    <Button
            android:text="StopService"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button10"
            android:onClick="stopServiceClick"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="98dp"
            app:layout_constraintTop_toBottomOf="@+id/button9" android:layout_marginBottom="7dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>